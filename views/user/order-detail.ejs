<%- include('../partials/user/userHeader') %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Order Status</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
        crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .order-status-container {
            max-width: 600px;
            margin: 50px auto;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            background-color: #fff;
        }

        .order-status-text {
            text-align: center;
            margin-bottom: 30px;
        }

        .product-img {
            max-width: 60px;
            height: auto;
        }

        .card-field {
            margin-bottom: 15px;
            padding: 15px;
        }

        .btn-container {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .btn-container button {
            flex: 1;
            margin: 0 5px;
        }

        .order-info {
            display: flex;
        }

        .order-info h6 {
            margin-bottom: 5px;
            color: #555;
        }

        .order-info p {
            margin: 0;
            font-weight: bold;
        }

        .canceled-status {
            color: red;
            font-weight: bold;
        }

        .status-info {
            margin-top: 20px;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="order-status-container card">
            <div class="card-body">
                <div class="order-status-text">
                    <h3>Order Status</h3>
                </div>

                <!-- Product Information -->
                <% order.items.forEach(item => { %>
                <div class="card card-field">
                    <div class="row g-3">
                        <div class="col-md-3 text-center">
                            <img src="/uploads/<%= item.image %>" class="product-img img-fluid" alt="Product Image">
                        </div>
                        <div class="col-md-9">
                            <div class="order-info">
                                <h6>Order Number:</h6>
                                <p><%= item._id %></p>
                            </div>

                            <div class="order-info">
                                <h6>Product Name:</h6>
                                <p><%= item.name %></p>
                            </div>

                            <div class="order-info">
                                <h6>Price:</h6>
                                <p><%= item.price %></p>
                            </div>

                            <div class="order-info">
                                <h6>Quantity:</h6>
                                <p><%= item.quantity %></p>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>

                <!-- Order Info -->
                <div class="card card-field">
                    <div class="card-body">
                        <h6 class="mb-3">Order Summary</h6>
                
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h6>Total Price:</h6>
                                <p> ₹ <%= order.totalPrice %></p>
                            </div>
                            <div class="col-md-6">
                                <h6>Total Paid:</h6>
                                <p> ₹ <%= order.totalPaid %></p>
                            </div>
                            <div class="col-md-6">
                                <h6>Payment Method:</h6>
                                <p><%= order.paymentMethod %></p>
                            </div>
                        </div>
                
                        <!-- <div class="row">
                            <div class="col-md-6">
                                <h6>Delivery Status:</h6>
                                <p><%=order.deliveryStatus %></p>
                            </div> -->
                
                            <div class="col-md-6">
                                <% if (order.canceled === true) { %>
                                    <h6 class="canceled-status">Order Status:</h6>
                                    <p class="canceled-status">Cancelled</p>
                                <% } else { %>
                                    <h6>Order Status:   <%= order.orderStatus %></h6>
                                  
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                
                


                <!-- Cancel and Return Order Button -->
                <div class="btn-container">
                 <% if (order.returned) { %>
                  <h3 style="color: green;">Order successfully Returned</h3>
                 <% }else{ %>
                    <% if (order.returnRequest === true) { %>
                        <p style="color: red;">Requested for Return and waiting for approval</p>
                    <% } else if (order.orderStatus === "Delivered" && !order.canceled) { %>
                        <a href="/users/return-order/<%= order._id %>"><button class="btn btn-danger">Return Order</button></a>
                    <% } else if (!order.canceled) { %>
                        <a href="/users/cancel-order/<%= order._id %>"><button class="btn btn-danger">Cancel Order</button></a>
                    <% } %>
                    <% } %>
                </div>
                
                
                
            </div>
        </div>
    </div>
    <!-- End of Product Information -->
    <%- include('../partials/user/userFooter') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>

</html>
