<%- include('../partials/user/userHeader') %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Order Confirmation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
        crossorigin="anonymous">

    <style>
        body {
            background-color: #f8f9fa;
        }

        .order-card {
            border-radius: 10px;
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 500px; /* Reduced card width */
            margin: 0 auto; /* Center the card */
        }

        .order-card .card-header {
            background-color: #fff;
            border-bottom: 1px solid #e0e0e0;
            padding: 0px;
        }

        .order-card .order-title {
            font-size: 20px;
            font-weight: bold;
            color: #6c757d;
            margin-bottom: 0;
            padding: 10px;
        }

        .order-card .card-body {
            background-color: #fff;
            padding: 15px;
        }

        .order-card img {
            max-width: 80px; /* Reduced image size */
            height: 50px;
        }

        .order-card .details a {
            color: blue;
            text-decoration: none;
            font-size: 14px;
        }

        .order-card hr {
            margin: 10px 0;
            border-color: #e0e0e0;
        }

        .order-card .order-message {
            font-size: 14px;
            color: #6c757d;
            margin-top: 5px;
        }
    </style>
</head>

<body>

    <section class="h-100 gradient-custom">
        <div class="container py-5">
            <div class="row justify-content-center align-items-center">
                <div class="col-lg-10 col-xl-8">
                    <% if (orders.length === 0) { %>
                        <p class="no-orders text-center">No orders available.</p>
                    <% } else { %>
                        <% orders.forEach(order => { %>
                            <div class="card order-card">
                                <div class="card-header">
                                    <h5 class="order-title">Order ID: <%= order._id %></h5>
                                </div>
                                <div class="card-body">
                                    <div class="row align-items-center">
                                        <div class="col-md-2">
                                            <img src="/uploads/<%= order.items[0].image %>" class="img-fluid" alt="Product Image">
                                        </div>
                                        <div class="col-md-2 text-center">
                                            <p class="text-muted mb-0">Price: <%= order.totalPrice %></p>
                                        </div>
                                        <div class="col-md-4 text-center">
                                            <div class="details">
                                                <% if (order.items.length > 1) { %>
                                                    <p class="order-message"><%= order.items.length - 1 %> more items</p>
                                                <% } %>
                                                <a href="/users/view-order-detail/<%= order._id %>">View Details</a>
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                </div>
                            </div>
                        <% }) %>
                    <% } %>
                </div>
            </div>
        </div>
    </section>

    
    <%- include('../partials/user/userFooter') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>
