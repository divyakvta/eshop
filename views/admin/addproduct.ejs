<%- include('../partials/admin/adminHeader') %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Add Product</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<style>

    h2 {
        text-align: center;
        margin-bottom: 30px;
    }
    

    .outer-box {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .form-group {
        margin-bottom: 20px;
        width: 70%; 
        margin-left: auto;
        margin-right: auto;
    }

    #image-preview {
        margin-top: 20px; 
        display: flex;
        justify-content: flex-start;
        align-items: center;
    }

    .img-thumbnail {
        max-width: 100px;
        max-height: 100px;
        margin-right: 10px;
    }

    .close {
        cursor: pointer;
        position: absolute;
        margin-top: -10px; 
        margin-left: 90px; 
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        width: 120px;
        margin-left: auto;
        margin-right: auto;
        display: block; /* Center the button */
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
</style>
<body>
    <% if (toastMessage) { %>
        <div class="toast" id="myToast" aria-live="polite" aria-atomic="true" data-delay="2000" style="background-color: #28a745;">
            <div role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-body">
                    <%= toastMessage %>
                </div>
            </div>
        </div>
        <script>
            setTimeout(function () {
                document.getElementById('myToast').style.display = 'none';
                myToast.show();
            }, 2000);
        </script>
    <% } %>

    <div class="container mt-5 outer-box">
        <h2>Add Product</h2>
        <form action="/admin/add-product" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" class="form-control" id="title" name="title" required>
            </div>
            <div class="form-group">
                <label for="desc">Description:</label>
                <textarea class="form-control" id="desc" name="desc" rows="3" required></textarea>
            </div>
            <div class="form-group">
                <label for="category">Category:</label>
                <select class="form-control" id="category" name="category" required>
                    <% category.forEach((cat, index) => { %>
                        <option value="<%= cat._id %>">
                            <%= cat.categoryName %>
                        </option>
                    <% }) %>
                </select>
            </div>
            <div class="form-group image-wrapper" id="images-to-upload">
                <label for="image">Image:</label>
                <input type="file" class="form-control-file" id="image" name="images" accept="image/*" onchange="addImageWrapper()"  multiple>
                <!-- Image preview container -->
                <div id="image-preview" ></div>
            </div>

            <div class="form-group">
                <label for="price">Price:</label>
                <input type="number" class="form-control" id="price" name="price" min="0" step="0.01" required>
            </div>
            <div class="form-group">
                <label for="size">Size:</label>
                <input type="text" class="form-control" id="size" name="size">
            </div>
            <div class="form-group">
                <label for="stock">Stock:</label>
                <input type="number" class="form-control" id="stock" name="stock" min="0" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Product</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>


  <script>
    var fileCounter = 1;

    function addImageWrapper() {
    var input = document.getElementById('image');
    var previewContainer = $('#image-preview');

    if (input.files) {
        for (var i = 0; i < input.files.length; i++) {
            var file = input.files[i];
            var reader = new FileReader();

            reader.onload = (function (counter) {
                return function (e) {
                    var wrapper = $('<div class="image-wrapper" style="width: 100px; height: 100px; overflow: hidden; " />');

                    var closeBtn = $('<span class="close">Ã—</span>');
                    closeBtn.click(function () {
                        removeImageWrapper(this, counter);
                    });

                    var img = $('<img class="img-thumbnail" style="width: 100%; height: 100%;">');
                    img.attr('src', e.target.result);

                    wrapper.append(closeBtn);
                    wrapper.append(img);
                    wrapper.data('file-number', counter);

                    previewContainer.append(wrapper);
                };
            })(fileCounter);

            reader.readAsDataURL(file);
            fileCounter++;
        }
    }
}


    function removeImageWrapper(closeBtn, counter) {
        var wrapper = $(closeBtn).parent('.image-wrapper');
        wrapper.remove();
        fileCounter--;  // Decrease the global fileCounter variable
    }
</script>

</body>

</html>
