<%- include('../partials/admin/adminHeader') %>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coupon Management</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
     
     h1 {
        color: #2c3e50;
        text-align: center;
        font-size: 2em;
        margin-top: 100px;
       
    }
    

    table {
     margin-top: 10px;
      width: 100%;
      background-color: #fff;
    }

    table, th, td {
      border: 1px solid #ddd;
    }

    th, td {
      padding: 12px;
      text-align: left;
    }

    th {
      background-color: rgb(183, 51, 51);
      color: #fff;
    }
      

        .coupon-code {
            color: #007bff;
        }

        .coupon-description {
            color: #555;
        }

        .coupon-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btn-edit,
        .btn-delete {
            padding: 8px 16px;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn-edit {
            background-color: #28a745;
            color: #fff;
            border: 1px solid #28a745;
        }

        .btn-delete {
            background-color: #dc3545;
            color: #fff;
            border: 1px solid #dc3545;
        }

        .btn-add-coupon {
            margin-top: 20px;
            padding: 10px 20px;
            border-radius: 5px;
            background-color: #007bff;
            color: #fff;
            border: 1px solid #007bff;
            cursor: pointer;
        }
    </style>
</head>

<body>

    <div class="container">
        <h1>Coupon List</h1>
        <table class="coupon-table">
            <thead>
                <tr>
                    <th>Coupon Code</th>
                    <th>Start Date</th>
                    <th>Expiration Date</th>
                    <th>Active</th>
                    <th>Discount Percentage</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% coupons.forEach(coupon => { %>
                    <tr>
                        <td class="coupon-code"><%= coupon.couponCode %></td>
                        <td><%= coupon.startDate.toLocaleDateString() %></td>
                        <td><%= coupon.expirationDate.toLocaleDateString() %></td>
                        <td><%= coupon.active %></td>
                        <td><%= coupon.discountPercentage %><span>%</span> </td>
                        <td class="coupon-actions">
                           <a href="/admin/delete-coupon/<%= coupon._id %>"   class="btn-delete" onclick="myConfirm('<%= coupon._id %>')">Delete </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <!-- Add Coupon Button -->
        <div class="text-center">
            <a href="/admin/add-couponPage">
                <button class="btn-add-coupon">Add Coupon</button>
            </a>
        </div>
    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- JavaScript for opening the modal -->
   
 <script>
    function myConfirm(couponId) {
        var result = confirm("Are you sure you want to delete this item?");
        if (result) {
            
            alert("Deletion successful");
            window.location.href = "/admin/delete-coupon/" + couponId + "?confirmation=true";
        } else {
            
            alert("Deletion canceled");
            window.location.href = '/admin/coupon/';
        }
    }
</script>
 
</body>

</html>
