<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Document</title>
</head>
<body>
    <% if (toastMessage) { %>
   
        <div class="toast" id="myToast"  aria-live="polite" aria-atomic="true" data-delay="2000" style="background-color: #28a745;">
            <div role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-body">
                    <%= toastMessage %>
                </div>
            </div>
        </div>
    <% } %>
    

    <script>
        document.addEventListener('DOMContentLoaded', function () {
    
            const myToastElement = document.getElementById('myToast');
    
    
            const myToast = new bootstrap.Toast(myToastElement);
    
                myToast.show();
            
        }); 
        
    </script>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>