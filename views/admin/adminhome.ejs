<%- include('../partials/admin/adminHeader') %>

<style>
    h1 {
        color: #2c3e50;
        text-align: center;
        font-size: 2em;
        margin-top: 100px;
    }

    table {
        margin-top: 10px;
        width: 100%;
        background-color: #fff;
    }

    table,
    th,
    td {
        border: 1px solid #ddd;
    }

    th,
    td {
        padding: 12px;
        text-align: left;
    }

    th {
        background-color: rgb(183, 51, 51);
        color: #fff;
    }

    .actions {
        text-align: center;
    }

    .add-product-btn {
        position: relative;
        right: 10px;
    }

    .pagination-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-left: 100px;
        padding-right: 100px;
        margin-top: 20px;
    }

    .pagination-number,
    .pagination-button {
        font-size: 1.2rem;
        background-color: #007bff;
        color: black;
        border: none;
        margin: 0.25rem;
        cursor: pointer;
        height: 2.5rem;
        width: 2.5rem;
        border-radius: 0.2rem;
        padding: 5px 10px;
    }

    .pagination-number:hover,
    .pagination-button:not(.disabled):hover {
        background: #e21515;
    }
</style>

<body>

    <div class="container">
        <h1>All Products</h1>

        <!-- Add Product Button -->
        <a href="/admin/add-product-Page" class="btn btn-primary add-product-btn">Add Product</a>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Size</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>Stock</th>
                    <th>Edit</th>
                    <th>Delete</th>
                    <th>Offer</th>
                </tr>
            </thead>

            <tbody id="product-table-body">
                <% if (product && product.length > 0) { %>
                    <% product.forEach((product, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= product.title %></td>
                            <td><%= product.category.categoryName %></td>
                            <td><%= product.size %></td>
                            <td><%= product.desc %></td>
                            <td><%= product.price %></td>
                            <td><img src="/uploads/<%= product.images[0].url %>" width="100" alt=""></td>
                            <td><%= product.stock %></td>
                            <td>
                                <a href="/admin/edit-product-page/<%= product._id %>">
                                    <button class="btn btn-success">Edit</button>
                                </a>
                            </td>
                            <td>
                                <a href="/admin/delete-product/<%= product._id %>">
                                    <button class="btn btn-danger" onclick="myConfirm('<%= product._id %>')">Delete</button>
                                </a>
                            </td>
                            <td>
                                <div class="d-flex flex-column justify-content-between align-items-center">
                                    <% if (product.productOffer !== 0) { %>
                                        <h6 class="text-truncate"><%= product.productOffer %>%</h6>
                                        <a href="/admin/product-offer-page/<%= product._id %>">
                                            <button class="btn btn-success">Add offer</button>
                                        </a>
                                    <% } else { %>
                                        <p>No Offer Available</p>
                                    <% } %>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="10" class="text-center">
                            <h2>No products found</h2>
                        </td>
                    </tr>
                <% } %>
            </tbody>
        </table>

        <div class="pagination-container">
            <button class="pagination-button" id="prev-button" title="Previous page" aria-label="Previous page">
                &lt;
            </button>

            <div id="pagination-numbers">
            </div>

            <button class="pagination-button" id="next-button" title="Next page" aria-label="Next page">
                &gt;
            </button>
        </div>

    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        function myConfirm(productId) {
            var result = confirm("Are you sure you want to delete this item?");
            if (result) {
                alert("Deletion successful");
                window.location.href = "/admin/delete-product/" + productId + "?confirmation=true";
            } else {
                alert("Deletion canceled");
                window.location.href = '/admin/adminhome';
            }
        }
    </script>

    <script>
        $(document).ready(function () {
            let currentPage = 1;
            const pageSize = 5; // Set your desired page size

            function fetchProducts(page) {
                $.ajax({
                    method: 'post',
                    url: '/admin/paginate',
                    data: {
                        page: page,
                        pageSize: pageSize
                    },
                    success: function (res) {
                        const productTableBody = $('#product-table-body'); // Use jQuery selector

                        if (res && res.products.length > 0) {
                            let productRowsHTML = '';

                            res.products.forEach((product, index) => {
                                productRowsHTML += `
                                    <tr>
                                        <td>${index + 1}</td>
                                        <td>${product.title}</td>
                                        <td>${product.category.categoryName}</td>
                                        <td>${product.size}</td>
                                        <td>${product.desc}</td>
                                        <td>${product.price}</td>
                                        <td><img src="/uploads/${product.images[0].url}" width="100" alt=""></td>
                                        <td>${product.stock}</td>
                                        <td>
                                            <a href="/admin/edit-product-page/${product._id}">
                                                <button class="btn btn-success">Edit</button>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/admin/delete-product/${product._id}">
                                                <button class="btn btn-danger" onclick="myConfirm('${product._id}')">Delete</button>
                                            </a>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column justify-content-between align-items-center">
                                                <% if (product.productOffer !== 0) { %>
                                                    <h6 class="text-truncate">${product.productOffer}%</h6>
                                                    <a href="/admin/product-offer-page/${product._id}">
                                                        <button class="btn btn-success">Add offer</button>
                                                    </a>
                                                <% } else { %>
                                                    <p>No Offer Available</p>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                `;
                            });

                            productTableBody.html(productRowsHTML);

                        } else {
                            // Handle the case when no products are returned
                            productTableBody.html('<tr><td colspan="10" class="text-center"><h2>No products found</h2></td></tr>');
                        }
                    },
                    error: function (error) {
                        console.log(error);
                    }
                });
            }

            fetchProducts(currentPage);

            // Pagination button click event handlers
            $('#prev-button').on('click', function () {
                if (currentPage > 1) {
                    currentPage--;
                    fetchProducts(currentPage);
                }
            });

            $('#next-button').on('click', function () {
                currentPage++;
                fetchProducts(currentPage);
            });
        });
    </script>

</body>
</html>
